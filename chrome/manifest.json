{
  "manifest_version": 2,

  "name": "Coursera Calendar",
  "description": "This extension allows to add deadlines from Coursera course website to your Google Calendar.",
  "version": "1.0",

  "permissions": [
    "tabs", "https://class.coursera.org/"
  ],
  "background" : {
    "scripts": ["background.js"]
  },
  "page_action" :
  {
    "default_icon" : "icon-20.png",
    "default_title" : "Add deadlines from this page",
    "default_popup": "popup.html"
  },
  "content_scripts" : [
    {
      "matches" : [
        "http://class.coursera.org/*/class/index",
        "https://class.coursera.org/*/class/index"
      ],
      "js" : ["contentscript.js"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
  "icons" : {
    "48" : "icon-48.png",
    "128" : "icon-128.png"
  }

}